{
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"target": "esnext",
		"lib": ["esnext"],
		"module": "preserve",
		"jsx": "preserve",
		"noEmit": true,
		"paths": {
			"~/*": ["./*"],
			"~~/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*"]
}
