{
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "preserve",
		"target": "esnext",
		"lib": ["esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
		"noEmit": true
	}
}
